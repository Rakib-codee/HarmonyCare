<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/screen_margin">

        <!-- Header Section with Profile -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:elevation="@dimen/elevation_low"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/card_padding"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome"
                        android:textSize="@dimen/text_size_headline"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_tiny" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help those in need"
                        android:textSize="@dimen/text_size_body"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/avatar_size_medium"
                    android:layout_height="@dimen/avatar_size_medium"
                    android:background="@drawable/icon_background_circle"
                    android:gravity="center"
                    android:padding="@dimen/spacing_small" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Availability Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:elevation="@dimen/elevation_medium"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/card_padding">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/viewStatusIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/status_indicator_unavailable"
                        android:layout_marginEnd="@dimen/spacing_medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Availability Status"
                            android:textSize="@dimen/text_size_title"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="@dimen/spacing_tiny" />

                        <TextView
                            android:id="@+id/tvAvailabilityStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unavailable"
                            android:textSize="@dimen/text_size_body"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </LinearLayout>

                <Switch
                    android:id="@+id/switchAvailability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/primary"
                    android:trackTint="@color/surface_variant" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- View Emergencies Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewEmergencies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:elevation="@dimen/elevation_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/card_padding"
                    android:background="@drawable/gradient_primary"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:src="@drawable/ic_emergency"
                        android:tint="@android:color/white"
                        android:layout_marginEnd="@dimen/spacing_medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_emergencies"
                            android:textSize="@dimen/text_size_title"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:elevation="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View active emergency requests"
                            android:textSize="@dimen/text_size_body"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:elevation="2dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvEmergencyBadge"
                        android:layout_width="@dimen/badge_size_large"
                        android:layout_height="@dimen/badge_size_large"
                        android:text=""
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/badge_background"
                        android:gravity="center"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Map View Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMapView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:elevation="@dimen/elevation_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/card_padding"
                    android:background="@drawable/gradient_info"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:src="@drawable/ic_map"
                        android:tint="@android:color/white"
                        android:layout_marginEnd="@dimen/spacing_medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Map View"
                            android:textSize="@dimen/text_size_title"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:elevation="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See emergencies on map"
                            android:textSize="@dimen/text_size_body"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:elevation="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Statistics Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:elevation="@dimen/elevation_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/card_padding"
                    android:background="@drawable/gradient_success"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:src="@drawable/ic_stats"
                        android:tint="@android:color/white"
                        android:layout_marginEnd="@dimen/spacing_medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Statistics"
                            android:textSize="@dimen/text_size_title"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:elevation="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View your volunteer stats"
                            android:textSize="@dimen/text_size_body"
                            android:textColor="@android:color/white"
                            android:alpha="0.9"
                            android:elevation="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- History Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:elevation="@dimen/elevation_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/card_padding"
                    android:background="@drawable/card_background_modern"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:src="@drawable/ic_history"
                        android:tint="@color/primary"
                        android:layout_marginEnd="@dimen/spacing_medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_history"
                            android:textSize="@dimen/text_size_title"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:elevation="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View past emergencies"
                            android:textSize="@dimen/text_size_body"
                            android:textColor="@color/text_secondary"
                            android:elevation="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Settings Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/elevation_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/card_padding"
                    android:background="@drawable/card_background_modern"
                    android:foreground="?android:attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:src="@drawable/ic_settings"
                        android:tint="@color/secondary"
                        android:layout_marginEnd="@dimen/spacing_medium" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings"
                            android:textSize="@dimen/text_size_title"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:elevation="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="App settings and preferences"
                            android:textSize="@dimen/text_size_body"
                            android:textColor="@color/text_secondary"
                            android:elevation="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
